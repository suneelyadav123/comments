<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h4 class="text-danger"><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h4>

    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control', required: true %>
        </div>
        <div class="col-3">
          <%= form.label :email %>
          <%= form.email_field :email, class: 'form-control', required: true %>
        </div>
        <div class="col-3">
          <%= form.label :password %>
          <%= form.password_field :password, class: 'form-control', required: true%>
        </div>
        <div class="col-3">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, class: 'form-control', required: true %>
        </div>
      </div>
    </div>
  </div>
  <div class="">
    <div class="float-right mt-2">
    <%= form.submit "Save Post", class: 'btn btn-primary mr-2' %>
    <%= link_to 'Cancel', posts_path, class: 'btn btn-secondary' %>
    </div> 
  </div>
<% end %>
