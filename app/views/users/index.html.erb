
<div class="row">
	<div class="col-6"><h1>Users</h1></div>
	<div class="col-6 mt-2">
		<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
	</div>
</div>
<div class="row mt-3">
	<div class="col-md-12">
		<table class="table table-bordered">
			<tr>
				<th>Name</th>
				<th>Email</th>
			</tr>
			<tbody>
				<%@users.each do |user| %>
				<tr>
					<td><%= user.name %></td>
					<td><%= user.email %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>	
</div>