<html lang="en"><head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <!-- Meta, title, CSS, favicons, etc. -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Comments App</title>
  <link href="/assets/favicon.ico" rel="icon" sizes="16x16" type="image/x-icon"></link>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container">
    <div class="col d-flex justify-content-center">
      <div class="card" style="width:350px;margin: auto">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div id=""><%= flash[:alert] %></div>
            <div class="col-12">
              <div class="form-group">
                <%= f.text_field :email, autofocus: true, placeholder: 'Username', required: true, class: 'form-control' %>
              </div>
              <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', required: true ,  class: 'form-control' %>
                </div>
            </div>
              <div class="col-3">
                <div class="">
                  <%= f.submit "Log in", class: 'btn btn-primary submit pull-right' %>
                </div>
              </div>
              <div class="clearfix"></div>
          <% end %>            
        </div>
      </div>
    </div>
  </div>  
</body>

</html>
